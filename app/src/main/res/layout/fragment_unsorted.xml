<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.omnify.hire.fragment.UnsortedFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/unsorted_cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:background="#FFFFFF"
        android:elevation="20dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/random_array_title"
                android:textSize="@dimen/random_number_title_textSize"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="3dp"
                android:background="@color/light_grey" />

            <TextView
                android:id="@+id/randomno_array"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:textSize="@dimen/random_number_body_textSize" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/btn_regenerator_array"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/unsorted_cardview"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/btn_sort_array"
        android:background="@color/green"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:text="@string/regen_btn_text"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/sort_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_regenerator_array"
        android:layout_alignBottom="@+id/btn_regenerator_array"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:background="@color/green"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:padding="5dp"
        android:text="@string/sort_btn_text"
        android:textColor="#FFFFFF" />
</RelativeLayout>
